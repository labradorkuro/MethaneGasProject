extends layout
block content
	div(style="text-align:center;width:100%;")
		h1= title
		div
			form.login_table#login_form(method="POST" action="/login")
				table.login_table(style="border:1px solid green;" cellspacing="0")
					tr
						th.login_title ユーザ名
						td
							input#uid(type="text" name="uid" size="20")
					tr
						th.login_title パスワード
						td
							input#password(type="password" name="password" size="20")
					tr
						td(colspan="2" style="text-align:center;")
							input(type="submit" name="submit" value="送信")
		span#login_message=	msg